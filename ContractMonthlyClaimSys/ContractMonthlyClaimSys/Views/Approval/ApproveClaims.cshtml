@model IEnumerable<ContractMonthlyClaimSys.Models.ClaimModel>
@{
    ViewData["Title"] = "Approve Claims";
}

<h2>Approve or Reject Claims</h2>
<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer Name</th>
            <th>Date Submitted</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @* Loop through the pending claims and display them *@
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerName</td>
                <td>@claim.SubmissionDate.ToShortDateString()</td>
                <td>
                    <form asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
